@model PriceQuotations.Models.Quotation

<link rel="stylesheet" href="~/css/quotations.css" />

<h1 class="display-4">Price Quotation</h1>

<form asp-action="Index" method="post" class="mt-4">
    <div class="mb-3">
        <label asp-for="Subtotal" class="form-label"></label>
        <input asp-for="Subtotal" class="form-control" />
        <span asp-validation-for="Subtotal" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DiscountPercent" class="form-label"></label>
        <input asp-for="DiscountPercent" class="form-control" />
        <span asp-validation-for="DiscountPercent" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Discount Amount</label>
        <input type="text" class="form-control"
               value="@(Model.Subtotal == 0 || Model.DiscountPercent == 0 ? "" : Model.DiscountAmount.ToString("C"))"
               readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Total</label>
        <input type="text" class="form-control"
               value="@(Model.Subtotal == 0 && Model.DiscountPercent == 0 ? "" : Model.Total.ToString("C"))"
               readonly />
    </div>

    <button type="submit" class="btn btn-primary">Calculate</button>
    <a asp-action="Index" class="btn btn-secondary">Clear</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
